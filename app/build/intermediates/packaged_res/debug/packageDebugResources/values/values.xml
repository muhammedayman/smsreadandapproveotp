<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="background_light">#F5F9FC</color>
    <color name="colorAccent">#00E5FF</color>
    <color name="colorPrimary">#0A192F</color>
    <color name="colorPrimaryDark">#040D19</color>
    <color name="divider">#CFD8DC</color>
    <color name="status_failed">#D50000</color>
    <color name="status_pending">#90A4AE</color>
    <color name="status_success">#00C853</color>
    <color name="surface_card">#FFFFFF</color>
    <color name="text_on_accent">#0A192F</color>
    <color name="text_primary">#0A192F</color>
    <color name="text_secondary">#546E7A</color>
    <string name="app_name">zeroGate</string>
    <style name="AppTheme" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
    </style>
    <style name="CardStyle">
        <item name="android:background">@drawable/bg_card</item>
        <item name="android:elevation">4dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="ZeroGateButton" parent="android:Widget.Material.Button">
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/text_on_accent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">4dp</item>
    </style>
    <style name="ZeroGateButton.Outlined" parent="android:Widget.Material.Button.Borderless">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>