<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App Configuration"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. API URL"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/etApiUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="https://example.com/api"
            android:inputType="textUri"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. JSON Payload Template"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use %code% and %phone% as placeholders"
            android:textSize="12sp"
            android:textColor="#666666"/>
        <EditText
            android:id="@+id/etPayload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="{ 'data': '%code%' }"
            android:minLines="2"
            android:inputType="textMultiLine"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. Header 1 Key"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/etHeaderKey1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Authorization"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4. Header 1 Value"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/etHeaderVal1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bearer token123"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5. Header 2 Key (Optional)"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/etHeaderKey2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Content-Type"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6. Header 2 Value (Optional)"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/etHeaderVal2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="application/json"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7. SMS Keyword to Scan"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/etKeyword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DONIKKAH"/>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save and Start App"
            android:layout_marginTop="24dp"
            android:padding="16dp"
            android:textSize="18sp"/>

    </LinearLayout>
</ScrollView>
